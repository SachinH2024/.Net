 @model MyBankApp.Models.User
 @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<h1>Welcome @Model.Username!</h1>
<h2 class="link-danger">Current Balance: @ViewBag.Balance</h2> 
<br />
<h4><a href="/Account/Transactions?userId=@Model.CustomerId">View Transactions</a></h4>

 @* <a href="/Account/Edit/@Model.CustomerId">Edit Profile</a>  *@
<br />
<form action="/Account/AddTransaction" method="post">
    <input type="hidden" name="userId" value="@Model.CustomerId" />
    <label for="description">Description:</label><input type="text" name="description" class="form-control form-control-lg" /><br />
    <label for="amount">Amount:</label><input type="number" name="amount" class="form-control form-control-lg" /><br />

    <div class="form-check">
    <input type="radio" id="credit" class="form-check-input" name="transactionType" value="credit" checked>
    <label for="credit" class="form-check-label">Credit</label>
    </div>
    <br />
    <input type="radio" id="debit" class="form-check-input" name="transactionType" value="debit">
    <label for="debit" class="form-check-label">Debit</label><br />
    
    <br />
    <br />
    <input type="submit" class="btn btn-primary btn-lg" value="Add Transaction" />
    <br />
    <br />
</form>
